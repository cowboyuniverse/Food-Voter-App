<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="1"
    tools:context="com.android.summer.csula.foodvoter.HomeActivity">

  <TextView
      android:id="@+id/tv_username"
      android:layout_width="wrap_content"
      android:textSize="24sp"
      tools:text="username"
      android:layout_height="wrap_content"/>

  <Button
      android:id="@+id/btn_start_poll"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="16dp"
      android:text="@string/btn_start_poll"
      android:textSize="24sp"/>

  <Button
      android:id="@+id/btn_active_poll"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:enabled="false"
      android:layout_gravity="center"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      android:text="@string/btn_active_poll"
      android:textSize="24sp"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@android:color/darker_gray"/>


  <TextView
      android:text="@string/tv_friends_list"
      android:layout_margin="8dp"
      android:textAlignment="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@android:color/darker_gray"/>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_friend_list"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="8dp"
      android:layout_weight=".90"
      android:padding="8dp"/>

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/btn_add_friend"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="true"
      app:fabSize="mini"
      app:srcCompat="@android:drawable/ic_input_add"/>


</LinearLayout>
